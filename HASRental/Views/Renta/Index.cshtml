@model IEnumerable<HASRental.Models.Renta>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--=== Favicon ===-->
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
    <!--=== Bootstrap CSS ===-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <!--=== Slicknav CSS ===-->
    <link href="~/css/plugins/slicknav.min.css" rel="stylesheet">
    <!--=== Magnific Popup CSS ===-->
    <link href="~/css/plugins/magnific-popup.css" rel="stylesheet">
    <!--=== Owl Carousel CSS ===-->
    <link href="~/css/plugins/owl.carousel.min.css" rel="stylesheet">
    <!--=== Gijgo CSS ===-->
    <link href="~/css/plugins/gijgo.css" rel="stylesheet">
    <!--=== FontAwesome CSS ===-->
    <link href="~/css/font-awesome.css" rel="stylesheet">
    <!--=== Theme Reset CSS ===-->
    <link href="~/css/reset.css" rel="stylesheet">
    <!--=== Main Style CSS ===-->
    <link href="~/css/style.css" rel="stylesheet">
    <!--=== Responsive CSS ===-->
    <link href="~/css/responsive.css" rel="stylesheet">
</head>

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Prikaz renti</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        margin-top: 2%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<table class="table table-bordered">
    <thead style="text-align:center">
        <tr>
            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.DatumRentanja)
            </th>
            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.DatumVracanja)
            </th>
            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.DodatneNaznake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Korisnik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vozilo)
            </th>
            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.PocetnaLokacija)
            </th>
            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.KrajnjaLokacija)
            </th>
            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.TipRezervoara)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatumRentanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumVracanja)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.DodatneNaznake)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Korisnik.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vozilo.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PocetnaLokacija.Grad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KrajnjaLokacija.Grad)
            </td>
            <td width="50px">
                @Html.DisplayFor(modelItem => item.TipRezervoara.Opis)
            </td>
            <td width="75%">
                <a asp-action="Details" asp-route-id="@item.Id">Prikaži račun</a>
            </td>
        </tr>
}
    </tbody>
</table>
